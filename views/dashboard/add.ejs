<div class="container-fluid container-fluid-custom pb-5 mb-5">

    <div class="row mb-4">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Add Task</li>
          </ol>
        </nav>
        <div class="col d-flex justify-content-between align-items-center">
          <h1 class="h3">Add Task</h1>
        </div>
      </div>
    </div>
  
    <form action="/dashboard/add" method="POST" class="position-relative">
      <div class="form-group mb-4 position-absolute" style="left:1px; top:1px; right: 1px;">
        <input type="text" class="form-control fw-bold border-0 fs-4" id="title" name="title" placeholder="Title" required>
      </div> <br><br>
      
      <div class="row form-group mb-4">
        <div class="col">
          <label for="date"> Due Date</label> <br>
          <input type="date" class="form-control" id="date" name="date" value="" placeholder="yyyy-mm-dd" required>
        </div>
      </div>

      <!-- Priority Dropdown -->
      <div class="form-group mb-4">
        <label for="priority" class="form-label"> Priority</label>
        <select class="form-select fs-4" id="priority" name="priority" placeholder="Priority">
          <option value="high">High</option>
          <option value="medium">Medium</option>
          <option value="low">Low</option>
        </select>
      </div>
  
      <div class="form-group mb-4">
        <textarea required class="form-control pt-5 fs-4" id="description" name="description" placeholder="What Needs to be Done?" rows="12"></textarea>
      </div>
  
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg">+ Add Task</button>
      </div>
  
    </form>
  
  </div>
  